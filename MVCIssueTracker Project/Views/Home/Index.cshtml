@model MVCIssueTrackerCode.Models.LoginModel

@{
    ViewBag.Title = "Login Page";
    Layout = null;
}
<style>

 body {
        padding-top: 200px;
        padding-bottom: 100px;
        background-image: url("/Content/Image.jpg");
        background-position: center;
      } 


.center {
           text-align: center;
        }

</style>




<body>
   
        @using (Html.BeginForm("Index", "Home", FormMethod.Post))
        {
            <div class="center">
                <h1><b>Please Login Here....</b></h1>
                <br />

                <h2><span><b>Username:</b></span>@Html.TextBoxFor(m => m.UserName)</h2>
                @Html.ValidationMessageFor(m => m.UserName)
                <br /><br />

                <h2><span><b>Password:</b></span>@Html.PasswordFor(m => m.Password)</h2>
                @Html.ValidationMessageFor(m => m.Password)
                <br /><br />

                <input type="submit" value="LOGIN" />
             </div>

        }
           
</body>
<script>@Html.Raw(@ViewBag.msg)</script>